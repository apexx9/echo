generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
  output          = "../generated/prisma"
}

datasource db {
  provider   = "postgresql"
  extensions = [vector]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())

  // Entitlements
  entitlementTier      String    @default("free") // 'free' | 'pro' | 'student_pro'
  studentVerifiedUntil DateTime?

  // Usage tracking
  monthlyIngestCount Int      @default(0)
  lastIngestReset    DateTime @default(now())

  memories Memory[]
  answers  Answer[]
}

model Memory {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  // Content
  rawContent     String
  rawContentHash String
  cleanedContent String

  // Provenance
  sourceType   String // 'note' | 'web' | 'pdf' | 'youtube' | 'conversation'
  sourceUrl    String?
  sourceTitle  String?
  sourceAuthor String?

  // Chronology
  createdAt         DateTime  @default(now())
  consumedAt        DateTime?
  sourcePublishedAt DateTime?

  // Intelligence
  summary     String
  keyConcepts String[] // Stored as text array
  embedding   Unsupported("vector(1536)") // pgvector extension for similarity search

  // Graph Connections
  relatedMemoryIds   String[]
  relationshipReason String[]

  // Verification & Feedback
  confidenceScore Float   @default(0.0)
  userVerified    Boolean @default(false)
  correctionNotes String?

  // Retention Physics
  importanceWeight Float @default(0.5)
  decayRate        Float @default(0.1)

  deletedAt DateTime?
}

model Answer {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  originalQuery     String
  interpretedIntent String

  answerText String

  // JSON blobs for structured objects that don't need dedicated tables yet
  supportingMemories Json
  timelineData       Json?
  suggestedActions   Json

  overallConfidence Float
  uncertaintyNotes  String?

  generatedAt DateTime @default(now())
}
